{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "name": "Trails",
  "colors": {
    "primary": "#0e0e0e",
    "light": "#fdfdf7",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": ["home"]
      },
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Welcome",
            "pages": [
              "intro"
            ]
          },
          {
            "group": "Overview",
            "pages": [
              "overview/one-click-payments",
              "overview/chain-abstraction"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/swapping",
              "examples/nft-purchase",
              "examples/deposit-withdrawls"              ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/how-it-works",
              "architecture/protocol"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "resources/supported-chains"
            ]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Documentation",
            "pages": [
              "sdk/get-started"
            ]
          }
        ]
      }
    ],
    "global": {
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/build_with_trails"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Demos",
      "href": "https://demo.trails.build"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  }
}