{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "name": "Trails",
  "colors": {
    "primary": "#3A5bff",
    "light": "#D9ECFF",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": ["home"]
      },
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Welcome",
            "pages": ["intro", "get-started"]
          },
          {
            "group": "Overview",
            "pages": ["overview/1-click-payments", "overview/chain-abstraction"]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/pay",
              "examples/swap",
              "examples/fund",
              "examples/earn"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/how-it-works",
              "architecture/protocol",
              "architecture/wallet-compatibility"
            ]
          },
          {
            "group": "Resources",
            "pages": ["resources/supported-chains"]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Documentation",
            "pages": [
              "sdk/get-started",
              "sdk/configuration",
              {
                "group": "Modes",
                "pages": ["sdk/modes/pay", "sdk/modes/fund", "sdk/modes/swap", "sdk/modes/receive"]
              },
              "sdk/theming",
              "sdk/gasless",
              "sdk/hooks"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light-mode.svg",
    "dark": "/logo/dark-mode.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/build_with_trails"
      }
    ]
  }
}
